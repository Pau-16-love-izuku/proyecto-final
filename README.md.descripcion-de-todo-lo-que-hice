    tk.OptionMenu(ventana, area_var, "Pediatr칤a", "Quir칩fano", "Operaciones", "Camillas", "Enfermer칤a").grid(row=4, column=1)

    tk.Label(ventana, text="Hora Entrada (ej. 7:10 AM):").grid(row=5, column=0)
